<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin"
              android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:labelFor="@+id/phoneBox"
        android:text="@string/phoneNum"/>

    <EditText
        android:id="@id/phoneBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"/>

    <TextView
        android:id="@+id/faultTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="@string/faultTitle"/>

    <CheckBox
        android:id="@+id/callGetsInterrupted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/callDrop"/>

    <CheckBox
        android:id="@+id/cantHearOtherParty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/personBquiet"/>

    <CheckBox
        android:id="@+id/otherPartyCantHearMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/personAquiet"/>

    <CheckBox
        android:id="@+id/poorSoundQuality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/badSound"/>

    <CheckBox
        android:id="@+id/slowInternetConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/slowNet"/>

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:labelFor="@+id/commentBox"
        android:text="@string/comment"/>

    <EditText
        android:id="@id/commentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="8"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="@string/send_button"/>
</LinearLayout>
